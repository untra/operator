{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["bun-types"],
    "paths": {
      "@operator/*": ["packages/plugins/*"]
    }
  },
  "include": [
    "global.d.ts",
    "packages/*/src/**/*",
    "packages/plugins/*/src/**/*",
    "src/standalone.ts",
    "src/index.ts"
  ],
  "exclude": ["node_modules", "dist", "**/dist"]
}
